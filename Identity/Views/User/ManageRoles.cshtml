@model Identity.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Manage Roles for User: <b>@Model.UserName</b></h3>
                        <a asp-action="Index" class="float-right">See All Users</a>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="ManageRoles">
                            <input asp-for="@Model.UserId" type="hidden" />
                            <input asp-for="@Model.UserName" type="hidden" />
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Role</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < Model.ManageRolesViewModel.Count(); i++)
                                        {
                                            <tr>
                                                <td>@Model.ManageRolesViewModel[i].Name</td>
                                                <td>@Model.ManageRolesViewModel[i].Description</td>
                                                <td>
                                                    <div class="custom-control custom-checkbox">
                                                        <input asp-for="@Model.ManageRolesViewModel[i].Checked" class="custom-control-input" id="checkbox-@i" />
                                                        <label class="custom-control-label" for="checkbox-@i"></label>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-right mt-3">
                                <button type="submit" id="save" class="btn btn-primary">
                                    <i class="fa fa-check"></i> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
