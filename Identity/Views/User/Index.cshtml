@model Identity.Helpers.PaginatedList<Identity.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "View Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Users</h3>
              </div>
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id</th>
                     <th>User Name</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a asp-action="ManageRoles" asp-route-userId="@item.Id" class="btn btn-primary btn-sm edit-button" >
                                        <i class="fas fa-users-cog"></i> Roles
                                    </a>

                                    <a asp-action="ManagePermissions" asp-route-userId="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-lock"></i> Permissions
                                    </a>
                                </td>
                            </tr>
                        }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


