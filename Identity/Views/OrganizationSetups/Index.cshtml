@model IEnumerable<Identity.Models.OrganizationSetup>

@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-1" style="height: 20px;">
                                    <div class="col-sm-6">
                                        <h1> Organization Setups</h1>
                                    </div>
                                    <div class="col-sm-6 d-flex justify-content-end">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registerModal">
                                            <i class="fas fa-plus"></i> Add Organization
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <button type="button" class="btn btn-link" data-toggle="modal" data-target="#descriptionModal-@item.Id">
                                                @item.Name
                                            </button>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Abbreviation)
                                        </td>

                                        <td>
                                            <a id="btnEdit-@item.Id" data-toggle="modal" data-target="#editModal-@item.Id" class="btn btn-primary btn-sm edit-button" data-role-id="@item.Id">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="ManageRoles" asp-route-userId="@item.Id" class="btn btn-primary btn-sm edit-button">
                                                <i class="fas fa-users-cog"></i> Roles
                                            </a>
                                            <a id="btnDelete-@item.Id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModal-@item.Id">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                            <a asp-action="ManagePermissions" asp-route-userId="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-lock"></i> Permissions
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@* Register  *@
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerModal">Register New Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" method="Post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="roleName">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label for="roleName">Motto</label>
                    <input type="text" class="form-control" id="Motto" name="Motto" placeholder="Enter Motto">
                </div>
                <div class="form-group">
                    <label for="roleName">Abbreviation</label>
                    <input type="text" class="form-control" id="Motto" name="Abbreviation" placeholder="Enter Abbreviation">
                </div>
                <div class="form-group">
                    <label for="roleName">Phone</label>
                    <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Enter Phone">
                </div>
                 <div class="form-group">
                    <label for="roleName">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email">
                </div>
                 <div class="form-group">
                    <label for="roleName">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">
                </div>
                 <div class="form-group">
                    <label for="roleName">MapLink</label>
                    <input type="text" class="form-control" id="MapLink" name="MapLink" placeholder="Enter MapLink">
                </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
        </div>
    </div>
</div>

@*  Details Modal *@
@foreach (var item in Model)
{
    <div class="modal fade" id="descriptionModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="descriptionModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="roleName">User Id</label>
                        <p>@item.Id</p>
                    </div>
                    <div class="form-group">
                        <label for="roleName"> Firs tName</label>
                        <p>@item.Name</p>
                    </div>
                    <div class="form-group">
                        <label for="roleName">Last Name</label>
                        <p>@item.Motto</p>
                    </div>
                    <div class="form-group">
                        <label for="roleDescription">Email</label>
                        <p>@item.Abbreviation</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

}

<!-- Edit  Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="editModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="editModal-@item.Id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editRoleModalLabel">Edit Role</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form asp-controller="User" asp-action="Edit" method="Post" id="registerUserForm">

                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <label for="Name">User Id</label>
                            <input type="text" class="form-control" name="Id" value="@item.Id" readonly>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <label for="Name">First Name</label>
                            <input type="text" class="form-control" id="Name" name="FirstName" value="@item.Name">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <label for="Name">Last Name</label>
                            <input type="text" class="form-control" id="Name" name="LastName" value="@item.Motto">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="RoleId" value="@item.Id" />
                            <label for="Name">Email</label>
                            <input type="email" class="form-control" id="Name" name="Email" value="@item.Abbreviation">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Delete  Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="DeleteModalLabel-@item.Id">Delete Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this record @item.Id?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    @using (Html.BeginForm("Delete", "OrganizationSetups", new { id = item.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
}